<main>


<div class="row">
  <div class="col s12">
    <form action="/chores" method="POST">
      <input type="text" id="name" name="chore_name" placeholder="Chore Name">

      <input type="text" id="instructions" name="instructions" placeholder="Instructions">

      <input type="text" id="points" name="points" placeholder="Points">

      <button type="submit" class="addChoreButton btn waves-effect waves-light">enter the chore instructions</button>

    </form>
  </div>
</div>


  <div class="row">
    {{#each chores}}
    {{#unless this.completed}}
      <div class="col s4 m4">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">{{this.chore_name}}</span>
              <p>Chore ID: {{this.id}}</p>
            <br>
              <p>Chore Instructions: {{this.instructions}}</p>
          </div>
          <div class="card-action">
            <form action="/chores/{{this.id}}?_method=PUT" method="POST">
              <input type="text" id="userName" name="userName" placeholder="Your Name">
              <button type="submit" class="completeChoreButton btn waves-effect waves-light"> complete</button>
            </form> </li> 
          </div>
        </div>
      </div>
    {{/unless}}
    {{/each}}
  </div>


  <div class="container">
    <div class="row">

   
      
      <div class="col s12">
        {{#each chores}}
          {{#if this.completed}}
            <div class='chore-completed'>
              <div>
                {{this.chore_name}} completed by {{this.User.name}} for {{this.points}} points
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div> 

</main>

