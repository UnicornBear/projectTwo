<main>

  <div class="row">
    {{#each chores}}
    {{#unless this.completed}}
      <div class="col s4 m4">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <a href="popup/{{this.id}}">{{this.chore_name}}</a>
            {{!-- <span class="card-title">{{this.chore_name}}</span> --}}
              <p>Chore ID: {{this.id}}
                <a class="delete waves-effect waves-light btn-med topright"><i class="material-icons">delete_sweep</i></a>
              </p>
            <br>
              <p>Chore Instructions: {{this.instructions}}</p>
          </div>
          <div class="card-action">
            <form action="/chores/{{this.id}}?_method=PUT" method="POST">
              <input type="text" id="userName" name="userName" placeholder="Your Name">
              <button type="submit" class="completeChoreButton btn waves-effect waves-light"> complete</button>
            </form> 
          </div>
        </div>
      </div>
    {{/unless}}
    {{/each}}
  </div>


  <!-- Lower modal to show all completed chores -->
  <a class="waves-effect waves-light btn modal-trigger" href="#modal3">See All Completed Chores!</a>

  <!-- Lower modal structure -->
  <div id="modal3" class="modal bottom-sheet">
    <div class="modal-content">
      {{#each chores}}
          {{#if this.completed}}
            <div class='chore-completed'>
              <div>
                {{this.chore_name}} completed by {{this.User.name}} for {{this.points}} points!
              </div>
            </div>
          {{/if}}
        {{/each}}
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat">Close</a>
    </div>
  </div>

</main>

